<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

    <% @posts.each do |post| %>
        <div class = "row">
          <div class = col-md-4>
            <p><%= image_tag(post.image_url , width: "50%" , height: "50%")%></p>
          </div>
          <div class = "col-md-8">
            <p><%= post.title %></p>
            <p><%= post.summary %></p>
            <p><%= post.user %></p>
            <p><%= post.subject %></p>
            <p><%= link_to 'Show', post %></p>
            <p><%= link_to 'Edit', edit_post_path(post) %></p>
            <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </div>
        </div>
    <% end %>

<br>

<%= link_to 'New Post', new_post_path %>
